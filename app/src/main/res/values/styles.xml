<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchViewTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkBackground</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">20dp</item>
        <item name="android:icon">@color/colorWhite</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>
</resources>
