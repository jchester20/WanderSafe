<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SearchView
        android:id="@+id/searchview"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:iconifiedByDefault="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/SearchViewTheme"
        android:queryHint="City or neighborhood"
        android:closeIcon="@drawable/ic_arrow_down">
        <requestFocus />

    </SearchView>

    <ImageButton
        android:id="@+id/arrowDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="365dp"
        android:layout_marginBottom="600dp"
        android:layout_marginVertical="38dp"
        android:src="@drawable/ic_arrow_down"
        android:translationZ="90dp"
        android:background="@color/colorPrimaryDark">
    </ImageButton>

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="365dp"
        android:layout_height="40dp"
        android:text="Brooklyn"
        android:textSize="20dp"
        android:background="@drawable/rounded_corner"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_home_24px"
        android:drawablePadding="12dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent"
        android:layout_marginTop="125dp"
        android:layout_marginStart="25dp"
        android:textSize="18dp"
        />

    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>